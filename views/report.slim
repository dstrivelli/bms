doctype html
html
  head
    title Health Check Report
    css:
      ul {
        margin: 0px;
        list-style-type: none;
      }
      li {
        margin: 0px;
      }
      table, th, td {
        border: 1px solid black;
      }
      table {
        border-collapse: collapse;
      }
      th {
        text-align: left;
        background-color: darkseagreen;
      }
      td {
        background-color: aliceblue;
      }
      th, td {
        padding: 0px 5px;
      }
  body
    h1 Kubernetes Nodes
    == partial :table, { table: results[:nodes] }
    h1 Unhealthy Pods
    == partial :table, { table: results[:unhealthy_pods] }
    h1 Pod Restarts
    == partial :table, { table: results[:pod_restarts] }
